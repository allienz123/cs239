<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.karthik.learnsql"
      android:versionCode="1"
      android:versionName="1.0">
    <application 
    	android:icon="@drawable/icon" 
    	android:label="@string/app_name" 
    	android:debuggable="true"
    	>
        <activity android:name="com.cawka.FriendDetector.FriendDetector"
                  android:label="@string/app_name"
                  android:clearTaskOnLaunch="true"
                  >
                  
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.karthik.learnsql.learnsql" 
        			android:label="Detectors"
        			android:clearTaskOnLaunch="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="com.karthik.learnsql.learnsql" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        
        <activity android:name=".Settings"
        		  android:label="@string/settings">
        	<intent-filter>
        		<action android:name="android.intent.action.MAIN" />
        		<action android:name="com.karthik.learnsql.Settings" />
        		<category android:name="android.intent.category.DEFAULT" />
        	</intent-filter>
        </activity>
        
        
    </application>
    <uses-sdk android:minSdkVersion="7" />
	<uses-permission android:name = "android.permission.CAMERA"/>
	<uses-permission android:name = "android.permission.INTERNET" />
</manifest>
